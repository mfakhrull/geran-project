<!-- Page Content -->
<div id="page-content-wrapper">

  <h3 class="d-flex ms-3">SISTEM PENDAFTARAN GERAN</h3>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12 col-lg-offset-2">
        <input type="text" id="myInput" class="d-flex" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">

        <table id="userTable" class="table table-striped caption-top">
          <caption>List of users</caption>
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Nama</th>
              <th scope="col">Tarikh Pendaftaran</th>
              <th scope="col">Status Pendaftaran</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th class="th-count" scope="row"></th>
              <td><%= nama %></td>
              <td><%= tarikhDaftar %></td>
              <td><%= status %></td>
              <td>
                <form action="/delete/user/<%= id._id %>?_method=DELETE" method="POST">
                  <button class="btn btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="mt-4 pendaftaran-btn d-flex justify-content-end">
        <a class="mb-4 mt-4 btn btn btn-secondary" href="/pendaftaran" type="button">Pendaftaran</a>
      </div>
    </div>
  </div>

</div>

