    <ul class="nav sidebar-nav">
      <div class="sidebar-header">
        <div class="sidebar-brand">
          <a href="#"><img class="img-brand" src="/images/mada-logo.png" alt=""></a>
        </div>
      </div>
      <li class="home"><a href="/main">Home</a></li>
      <li class="dropdown">
        <a href="#senarai" class="dropdown-toggle" data-toggle="dropdown">Senarai Permohonan <span class="caret"></span></a>
        <ul class="dropdown-menu animated fadeInLeft" role="menu">
