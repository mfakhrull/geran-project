<!-- Page Content -->
<div id="page-content-wrapper">
  <h3 class="d-flex ms-3">SISTEM PENDAFTARAN GERAN</h3>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12 col-lg-offset-2">
        <input type="text" id="myInput" class="d-flex" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">
        <table id="userTable" class="table table-striped caption-top">
          <caption>List of users</caption>

          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Nama</th>
              <th scope="col">Tarikh Pendaftaran</th>
              <th scope="col">Status Pendaftaran</th>
              <th scope="col">Action</th>
            </tr>
          </thead>

          <tbody>
            <%  userDispproved.forEach(function(user){  %>
            <tr>
              <th class="th-count" scope="row"></th>
              <td><%= user.userData.nama %></td>
              <td><%= user.userData.tarikhDaftar %></td>
              <td><%= user.status %></td>
              <td>
                <form class="button-form" action="/main/statuslulus/<%= user.id %>" method="POST">
                  <button class="btn btn-success"><i class="far fa-check-circle"></i></button>
                </form>
                <form class="button-form" action="/main/statustidaklulus/<%= user.id %>" method="POST">
                  <button class="btn btn-danger"><i class="far fa-times-circle"></i></button>
                </form>
              </td>
              <td>
                <form class="button-form" action="/main/view/<%= user.id %>" method="POST">
                  <button class="btn btn-secondary">View</button>
                </form>
                <form class="button-form" action="/delete/<%= user.id %>?_method=DELETE" method="POST">
                  <button class="btn btn-outline-danger">Delete</button>
                </form>
              </td>
            </tr>
            <%  }) %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>

<script src="/js/script.js" charset="utf-8"></script>


